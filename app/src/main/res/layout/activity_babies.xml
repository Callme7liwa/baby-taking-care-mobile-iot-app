                    android:layout_height="1dp"
                    android:background="#40999999"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/cirlce_light_white"
                    android:elevation="10dp"
                    />

            </LinearLayout>

