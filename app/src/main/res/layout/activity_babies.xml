                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Birthday"
                        android:textColor="#9F000000"
                        android:textAllCaps="true"
                        android:textSize="11dp"
                        android:fontFamily="@font/nunito_bold"/>
