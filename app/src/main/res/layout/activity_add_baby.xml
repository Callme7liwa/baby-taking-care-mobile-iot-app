<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cirlce_light_white"
                android:elevation="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_chevron_left_black_24"

                />
        </RelativeLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_add_baby" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/device_id" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/black"
                        android:letterSpacing="0.05"
                        android:text="device id"
                        android:textAllCaps="true"
                        android:textSize="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity = "center_vertical"
                    android:layout_marginTop="5dp"
                    >

                    <EditText
                        android:id="@+id/device_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:fontFamily="@font/nunito_medium"
                        android:hint="@your_deviceId"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="#999"
                        android:textSize="14dp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_blue"
                        android:foregroundGravity="right"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_check_24"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/name_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_bold"
                        android:letterSpacing="0.05"
                        android:text="Baby name"
                        android:textAllCaps="true"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity = "center_vertical"
                    android:layout_marginTop="5dp"
                    >

                    <EditText
                        android:id="@+id/text_fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:fontFamily="@font/nunito_medium"
                        android:hint="@your_babyName"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="#999"
                        android:textSize="14dp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_blue"
                        android:foregroundGravity="right"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_check_24"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_birthday" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nunito_bold"
                        android:letterSpacing="0.05"
                        android:textColor="@color/black"
                        android:text="Baby Birthday"
                        android:textAllCaps="true"
                        android:textSize="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity = "center_vertical"
                    android:layout_marginTop="5dp"
                    >

                    <EditText
                        android:id="@+id/text_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_background"
                        android:fontFamily="@font/nunito_medium"
                        android:hint="@your_babyBirthday"
                        android:inputType="date"
                        android:padding="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="#999"
                        android:textSize="14dp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_blue"
                        android:foregroundGravity="right"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_check_24"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity = "center_vertical"
                    android:layout_marginTop="5dp"
                    >


                    <LinearLayout
                        android:id="@+id/upload_baby_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_custom_black"
                        android:gravity="center"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/checked_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_medium"
                            android:letterSpacing="0.07"
                            android:textSize="12dp"
                            android:text="UPLOAD BABY IMAGE"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_blue"
                        android:foregroundGravity="right"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_check_24"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="10dp"
                android:id="@+id/button_choose_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:background="@drawable/button_background_blue"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>